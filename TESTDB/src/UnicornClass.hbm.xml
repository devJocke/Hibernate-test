<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="data.UnicornClass" table="UnicornClass">

        <meta attribute="class-description">
            This class contains the unicornclass detail.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="title" column="Title" type="string"/>
        <property name="year" column="Year" type="date"/>

        <set name="unicorn" table="Unicorn">
            <key column="id" />
            <composite-element class="data.Unicorn">
                <property name="firstName" column="FirstName" type="java.lang.String"/>
                <property name="lastName" column="lastname" type="java.lang.String"/>
                <property name="thirdName" column="thirdname" type="java.lang.String"/>
            </composite-element>
        </set>

    </class>
</hibernate-mapping>